
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Layout/_UILayout.cshtml";
}

<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        @await Component.InvokeAsync("_DetailImagesComponentPartial")

        @await Component.InvokeAsync("_ProductDetailComponentPartial")
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Açıklama</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Ürün ek bilgileri</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Kullanıcı yorumları</a>
                </div>
                <div class="tab-content">
                    @await Component.InvokeAsync("_ProductDetailDescriptionComponentPartial")

                    @await Component.InvokeAsync("_ProductDetailInformationComponentPartial")

                    @await Component.InvokeAsync("_ProductDetailReviewComponentPartial")
                </div>
            </div>
        </div>
    </div>
</div>
