@using MultiShop.Dtos.FeatureSliderDtos
@model ResultFeatureSliderDto
@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/Layout/Admin.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Ürün Ekleme</h4>
        <!-- Main content -->
        <section class="content container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="chart-box">
                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" name="SliderID" value="@Model.SliderID"/>
                                <input type="hidden" name="Status" value="@Model.Status"/>
                                <input type="text" class="form-control" name="SliderTitle" value="@Model.SliderTitle" placeholder="Slider Başlığı">
                            </div>
                            <div class="form-group">
                                <textarea rows="5" class="form-control" name="SliderDescription" placeholder="Slider Açıklaması">@Model.SliderDescription</textarea>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="SliderImageUrl" value="@Model.SliderImageUrl" placeholder="Slider Resim URL ">
                            </div>
                            <button type="submit" class="btn btn-success">Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- content -->
    </div>
</div>
