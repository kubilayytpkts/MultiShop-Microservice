@using MultiShop.Dtos.SpecialOfferDtos
@model ResultSpecialOfferDto
@{
    ViewData["Title"] = "UpdateSpecialOffer";
    Layout = "~/Areas/Admin/Views/Layout/Admin.cshtml";
}


<div class="col-md-12">
    <div class="chart-box">
        <h4>Kategori Ekleme</h4>
        <!-- Main content -->
        <section class="content container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="chart-box">
                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" name="SpecialOfferId" value="@Model.SpecialOfferId" />
                                <input type="text" class="form-control" value="@Model.SpecialOfferTitle" name="SpecialOfferTitle" placeholder="Başlık">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" value="@Model.SpecialOfferSubTitle" name="SpecialOfferSubTitle" placeholder="Alt Başlık">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" value="@Model.SpecialOfferImage" name="SpecialOfferImage" placeholder="Özel teklif görsel">
                            </div>
                            <button type="submit" class="btn btn-success">Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- content -->
    </div>
</div>

