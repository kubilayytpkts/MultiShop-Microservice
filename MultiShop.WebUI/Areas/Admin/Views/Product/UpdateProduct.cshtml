@model MultiShop.Dtos.ProductDtos.ProductResultDto

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/Layout/Admin.cshtml";
}
<style>
    .custom-dropdown {
    width: 100%; /* Tam genişlik */
    max-width: 400px; /* Maksimum genişlik */
    padding-right: 10px; /* Sağ boşluk */
    box-sizing: border-box; /* Padding ve border'ı genişliğe dahil et */
}
</style>
<div class="col-md-12">
    <div class="chart-box">
        <h4>Ürün Güncelleme</h4>
        <!-- Main content -->
        <section class="content container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="chart-box">
                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" name="ProductID" value="@Model.ProductID" />
                                <input type="text" class="form-control" name="ProductName" value="@Model.ProductName" placeholder="Ürün Adı">
                            </div>
                            @Html.DropDownListFor(x => x.CategoryID,
                                     (List<SelectListItem>)ViewData["CategoryList"],
                                     new { @class = "form-control custom-dropdown" })

                            <br />
                            <div class="form-group">
                             <textarea rows="5" class="form-control" name="ProductDescription" placeholder="Ürün Açıklaması">@Model.ProductDescription</textarea>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="ProductPrice" value="@Model.ProductPrice" placeholder="Ürün Fiyatı">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="ProductImageUrl" value="@Model.ProductImageUrl" placeholder="Resim URL">
                            </div>
                            <button type="submit" class="btn btn-success">Düzenle</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- content -->
    </div>
</div>


