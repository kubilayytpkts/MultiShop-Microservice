@using MultiShop.Dtos.FeatureDtos
@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Admin.cshtml";
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Kategori Listesi</h4>
        <div class="bs-example" data-example-id="bordered-table">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Özellik</th>
                        <th>Düzenle</th>
                        <th>Sil</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.FeatureTitle</td>
                            <td><a class="btn btn-primary" href="/Admin/Feature/UpdateFeature/@item.FeatureId">Düzenle</a></td>
                            <td>
                                <a class="btn btn-warning" href="/Admin/Feature/DeleteFeature/@item.FeatureId">Sil</a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <a href="/Admin/Feature/CreateFeature/" class="btn btn-primary">Kategori Ekle</a>
    </div>
</div>
